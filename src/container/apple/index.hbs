<div class="page">
	<div class="section header">
		<div class="section__content">
			{{#with header}}
			<header class="header__content">
				<div class="header__block">
					<img class="header__icon" src="/svg/apple.svg" alt="Apple">
					<nav class="header__block">
						{{#each links}}
						<a class="header__link" href="{{url}}">{{text}}</a>
						{{/each}}
					</nav>
				</div>
				<div class="header__action">
					<img class="header__icon" src="/svg/search.svg" alt="Search">
					<img class="header__icon" src="/svg/profile.svg" alt="Profile">
				</div>
			</header>
		</div>
	</div>
	<div class="section ad">
		{{#with ad}}
		<div class="ad__content">
			<div class="ad__title">
				{{title}}
			</div>
			{{#with link}}
			<a class="ad__url" href="{{../link}}">{{text}}
			</a>
			{{/with}}
		</div>
		{{/with}}
	</div>
	{{/with}}

	{{#with iphone_pro}}
	<section class="product product-big product--iphone-pro product--dark product--top">
		<div class="product__content">
			<h1 class="product__title">
				{{title}}
			</h1>
			<p class="product__description">{{descriptions}}</p>
			<div class="product__action">
				{{#with link}}
				{{#each text}}
				<a class="product__link" href="{{../link}}">{{this}}</a>
				{{/each}}
				{{/with}}
			</div>
		</div>
	</section>
	{{/with}}

